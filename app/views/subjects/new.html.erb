<div class="add-unit-page">
  <h1>単位を追加</h1>

  <%= form_with(model: @subject, local: true, class: 'add-unit-form') do |form| %>
    <div class="form-group">
      <%= form.label :name, '講義名' %>
      <%= form.text_field :name, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :credits, '単位数' %>
      <%= form.number_field :credits, step: 0.5, min: 0, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :category, '分類' %>
      <%= form.select :category, ['必修', '選択', '自由'], {}, required: true %>
    </div>

    <div class="form-actions">
      <%= form.submit '追加', class: 'btn btn-primary' %>
      <%= link_to 'キャンセル', subjects_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>